transl|transl_and_scale|rigid|similarity|affine|homography)

ffmpeg -i home2.avi -vf "[in] scale=iw/1:ih/1, pad=2*iw:ih [left]; movie=output_home2_200_zm250_similarity.avi, scale=iw/1:ih/1 [right]; [left][right] overlay=main_w/2:0 [out]" -b:v 768k Output.avi


ffmpeg -i vs_homography.avi -vf "[in] scale=iw/1:ih/1, pad=iw:3*ih [top]; movie=vs_affine.avi, scale=iw/1:ih/1 [middle]; movie=vs_similarity.avi, scale=iw/1:ih/1 [down]; [top][middle][down] overlay=main_w/0:3 [out]" -b:v 768k Output.avi


ffmpeg -i vs_homography.avi -vf "[in] scale=iw/1:ih/1, pad=iw:2*ih [top]; movie=vs_affine.avi, scale=iw/1:ih/1 [down]; [top][down] overlay=0:main_h/2 [out]" -b:v 768k Output.avi
